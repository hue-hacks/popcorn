<section>
  <h2>Current Popcorn</h2>

  <section>
    <h3>Current Item:</h3>
    <p>{{if this.currentItem this.currentItem "(Not running...)"}}</p>
    <h3>Time Remaining:</h3>
    <p>{{this.timer.timer}}</p>
  </section>

  <ul>
    {{#each this.currentQueue as |item|}}
      <li class={{if (eq item this.currentItem) "popcorn-item--current"}}>{{item}}</li>
    {{/each}}
  </ul>

  {{#if isPopcornRunning}}
    <button {{on "click" this.nextItem}}>Next</button>
    <button {{on "click" this.end}}>End</button>
  {{else}}
    <button {{on "click" this.start}}>Start</button>
  {{/if}}
</section>